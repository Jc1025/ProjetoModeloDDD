@model ProjetoTransparencia.Apresentacao.Models.DocumentosModel

@{
	ViewData["Title"] = "Envio de Documentos";
}
<h4>Envio de Documentos</h4>
<hr />


@using (Html.BeginForm("Gravar", "EnvioDocumentos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	<div class="row">
		<div class="col-12">
			<h3><span>Envio de Documentos</span></h3>
			<div style="margin-top:4%">
				<input type="file" id="File_Upload" name="File" />
				<div>
					<span>Selecione um nivel de Permissão</span>
					@Html.DropDownListFor(x => x.NivelPermissao, new SelectList(Model.TbPermissao, "Id", "NivelPermissao"), null, new { @class = "form-control" })
				</div>
				<div>
					<span>Selecione um tipo de Documento</span>
					@Html.DropDownListFor(x => x.TipoDocumento, new SelectList(Model.TbTipoDocumentos, "Id", "Tipos"), null, new { @class = "form-control" })
				</div>
				<input type="submit" id="enviarDocumento" class="btn btn-primary col-12" value="Upload" />
			</div>
		</div>
	</div>
}

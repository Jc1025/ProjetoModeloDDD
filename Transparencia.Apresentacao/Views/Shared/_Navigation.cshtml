@{
	ViewData["Title"] = "Navigation";
}

<meta charset="utf-8" />
<script src="~/javascript/jquery-3.4.1.min.js"></script>
<script src="~/javascript/bootstrap.min.js"></script>
<script src="~/javascript/jquery.growl.js" type="text/javascript"></script>
<link rel="stylesheet" href="~/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/TransparenciaEstilo.css" />
<link rel="stylesheet" href="~/css/jquery.growl.css" />

<body>
	<div class="wrapper">
		<nav id="sidebar">
			<div class="sidebar-header">
				<img src="~/Imagens/logo.png" class="Logo2" />
			</div>
			<ul class="nav list-unstyled components">
				<li>
					<a href="#userSubmenu" class="col-12 mb-4" data-toggle="collapse" aria-expanded="false">
						<img src="@ViewBag.ImagemUsuario" style="border-radius:50px" class="col-4 p-0" />
						<span style="margin-left:5%; color:black" class="col-6 p-0">@ViewBag.LoginUsuario</span>
					</a>
					<ul class="nav collapse list-unstyled" id="userSubmenu">
						<li class="col-12">@Html.ActionLink("Meus Documentos", "DocumentosPostados", "DocumentosPostados", null, new { @style = "color:black" })</li>

						<li class="col-12">@Html.ActionLink("Alterar Dados", "AlterarDados", "AlterarDados", null, new { @style = "color:black" })</li>
					</ul>
				</li>

				@if (ViewBag.Permissao == 1)
				{
					<li class="col-12">@Html.ActionLink("Controle de Usuarios", "ControleUsuarios", "ControleUsuarios", null, new { @style = "color:black" })</li>

					<li class="col-12">@Html.ActionLink("Requisicoes", "Requisicoes", "Requisicoes", null, new { @style = "color:black" })</li>

					<li class="col-12">@Html.ActionLink("Controle de Documentos", "ControleDocumentos", "ControleDocumentos", null, new { @style = "color:black" })</li>
				}

				<li class="col-12">@Html.ActionLink("Menu", "Main", "Main", null, new { @style = "color:black" })</li>



				<li class="col-12">@Html.ActionLink("Envio de Documentos", "EnvioDocumentos", "EnvioDocumentos", null, new { style = "color:black" })</li>

				<li class="col-12">@Html.ActionLink("Sair", "Sair", "Main", null, new { @style = "color:black" })</li>


			</ul>
		</nav>
		<div id="Content">
			<button type="button" id="sidebarCollapse" class="btn btn-info">
				<i class="fas fa-align-left"></i>
				<span>Toggle Sidebar</span>
			</button>
			<div style="margin-left:1%;margin-top:1%">
				@RenderBody()
			</div>

		</div>
	</div>

	<script type="text/javascript">
		$(document).ready(function () {
			$('#sidebarCollapse').on('click', function () {
				$('#sidebar').toggleClass('active');
			});
		});
	</script>
</body>


